# Azure AD Configuration (Optional - only required for Azure AD login)
# Leave these empty if you only want to use local username/password authentication
AZURE_AD_CLIENT_ID=your_client_id_here
AZURE_AD_CLIENT_SECRET=your_client_secret_here
AZURE_AD_TENANT_ID=your_tenant_id_here
AZURE_AD_REDIRECT_URI=http://localhost:3000/api/auth/azure/callback

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Webhook Secrets
WEBHOOK_SECRET_UPTIMEROBOT=your_secret_here
WEBHOOK_SECRET_FILEMAKER=your_secret_here
WEBHOOK_SECRET_BACKUP=your_secret_here
WEBHOOK_SECRET_AWS_S3=your_secret_here

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_COOKIE_NAME=server_monitor_session

# Cron Job Security
CRON_SECRET=your_cron_secret_here

# Email Configuration (Resend)
RESEND_API_KEY=your_resend_api_key_here
STATUS_PAGE_FROM_EMAIL=status@yourdomain.com
STATUS_PAGE_FROM_NAME=Server Monitor

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000
